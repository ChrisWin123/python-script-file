import random
import time
while True:
    print("Welcome to the Number Guessing Game!")
    print("I'm thinking of a number between 1 and 100.")
    print("You have 5 chances to guess the correct number.")

    difficulty = input('''
    Please select the difficulty level:
    1. Easy (10 chances)
    2. Medium (5 chances)
    3. Hard (3 chances)
    ''').lower()

    system = random.randint(1,100)
    start_time = time.time()
    choice = int(input("enter your number of choice: "))
    if difficulty == "easy":
        for i in range(1,10):
            if choice > system:
                print("The Number is to high! Try again.")
                print()
            elif choice < system:

                print("The number is to low! Try again.")
                print(f"You took {time_taken} seconds to guess the number.")
            if choice == system:
                print("YOU GOT THE NUMBER CONGRANTS")
                break
            else:
                print("You have not found the number yet")
                choice = int(input("enter your number of choice again: "))
    elif difficulty == "medium":
        for i in range(1,5):
            if choice > system:
                print("The Number is to high! Try again.")
                print()
            elif choice < system:
                end_time = time.time()
                time_taken = round(end_time - start_time, 2)
                print("The number is to low! Try again.")
                print(f"You took {time_taken} seconds to guess the number.")
            if choice == system:
                print("YOU GOT THE NUMBER CONGRANTS")
                break
            else:
                print("You have not found the number yet")
                choice = int(input("enter your number of choice again: "))
    elif difficulty == "hard":
        for i in range(1,3):
            if choice > system:
                print("The Number is to high! Try again.")
                print()
            elif choice < system:
                end_time = time.time()
                time_taken = round(end_time - start_time, 2)
                print("The number is to low! Try again.")
                print(f"You took {time_taken} seconds to guess the number.")
            if choice == system:
                print(f"YOU GOT THE NUMBER CONGRANTS I")
                break
            else:
                print("You have not found the number yet")
                choice = int(input("enter your number of choice again: "))

    partial = input("Do you wish to contiune(Y/N): ")
    if partial == "Y" or partial == "y":
        continue
    else:
        break
